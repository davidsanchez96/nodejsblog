extends layout

block content
  if errors
     each error, i in errors
       .alert.alert-danger #{error.msg}      
  form(method='post', action='/posts/add', enctype='multipart/form-data')
    .form-group
      label Author:
      select.form-control(name='author')        
        option(value='David Sanchez') David Sanchez 
        option(value='John Doe') John Doe 
    .form-group
      label Title:
      input.form-control(name='title', type='text')
    .form-group
      label Main Image:
      input.form-control(name='mainimage', type='file')
    .form-group
      label Category:
      select.form-control(name='category')
        each category, i in categories
          option(value='#{category.title}') #{category.title}
    .form-group
      label Body:
      textarea.form-control.ckeditor(name='body', type='text', rows='5')
    input.btn.btn-default(name='submit', type='submit', value='Save')
    script(src='/ckeditor/ckeditor.js')
      CKEDITOR.replace('body', {contentsCs: [CKEDITOR.basePath + 'contents.css', '../stylesheets/bootstrap.css'],  allowedContent: true})